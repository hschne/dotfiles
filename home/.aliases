# Nvim
alias vim="nvim"
alias vi="nvim"

# Bat
alias cat="bat"
alias ccat="cat"

# Find
alias find="fd"
alias ffind="find"

# Ls
alias ls="eza"
alias lls="ls"

# Tmuxinator
alias mux="tmuxinator"

# Open
alias open="xdg-open"

# Config Files
alias aliases="$EDITOR ~/.aliases"
alias i3rc="$EDITOR ~/.config/i3/config"
alias alacrittyrc="$EDITOR ~/.config/alacritty/alacritty.toml"
alias polybarrc="$EDITOR ~/.config/polybar/config"
alias nvimrc="$EDITOR ~/.config/nvim/lua"
alias nvimconfg="$EDITOR ~/.config/nvim/lua/config/"
alias nvimplugs="$EDITOR ~/.config/nvim/lua/plugins/"
alias rangerrc="$EDITOR ~/.config/ranger/rc.conf"
alias tmuxrc="$EDITOR ~/.tmux.conf"
alias zshrc="$EDITOR ~/.zshrc"

# Directories
alias dl="cd ~/Downloads"
alias src="cd ~/Source"
alias docs="cd ~/Documents"
alias wrt="cd ~/Documents/Wiki/notes/writing/"
alias pic="cd ~/Pictures"
alias wiki="cd ~/Documents/Wiki/notes/"
alias notes="cd ~/Documents/Wiki/notes/"
alias cheats="cd ~/.local/share/navi/cheats/hschne__cheats/cheats"

# Notes
alias todo="$EDITOR ~/Documents/Wiki/todo.txt"
alias todom="$EDITOR ~/Documents/Wiki/todo-meister.txt"
alias scratch="$EDITOR ~/Documents/Wiki/scratchpad.md"
alias work/="$EDITOR ~/Documents/Wiki/work/"

## Lists
alias ideas="$EDITOR ~/Documents/Wiki/lists/ideas.md"
alias lists="$EDITOR ~/Documents/Wiki/lists/"
alias media="$EDITOR ~/Documents/Wiki/lists/media.md"
alias places="$EDITOR ~/Documents/Wiki/lists/places.md"
alias tweets="$EDITOR ~/Documents/Wiki/lists/tweets.md"
alias books="$EDITOR ~/Documents/Wiki/lists/books.md"

# Homeshick
alias hcd="homeshick cd dotfiles"
alias hpd="homeshick pull dotfiles"
alias hld="homeshick link dotfiles"
alias htd="homeshick track dotfiles"

# Git
alias gmt="git mergetool"
alias gaacm="git add -A && git commit -m"
alias gcl="git clone"

# Github CLI
alias ghcl="gh repo clone"
alias ghpr="gh pr create --editor"

# Docker
alias dcu="docker-compose up"
alias dcd="docker-compose down"
alias dca="docker-compose start"
alias dco="docker-compose stop"

# Bundler
alias bex="bundle exec"
alias bo="bundle open"


# Close terminal window
alias :q='exit'

# Other
alias -g ...='../..'
alias -g ....='../../..'
alias -- -='cd -'
alias ll='ls -lh'
alias la='ls -lAh'

# Pandock!
alias pandock='docker run --rm -v "$(pwd):/data" -u $(id -u):$(id -g) pandoc/extra'

# Zeitblok
alias zb='zeitblok'
alias zbl='zeitblok log'
